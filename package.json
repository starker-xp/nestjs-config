{
  "name": "nestjs-config",
  "version": "1.4.10",
  "description": "Easy to use Nest congifuration module",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/starker-xp/nestjs-config"
  },
  "license": "MIT",
  "authors": [
    {
      "name": "Aaryanna Simonelli",
      "email": "ashleighsimonelli@gmail.com"
    },
    {
      "name": "Fabrizio Fenoglio",
      "email": "fabri.feno@gmail.com"
    },
    {
      "name": "Shady Khalifa",
      "email": "shekohex@gmail.com"
    }
  ],
  "keywords": [
    "nestjs",
    "config",
    "environment"
  ],
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc && npm run build:index",
    "build:index": "rimraf ./index.js && rimraf ./index.d.ts && tsc -d --skipLibCheck ./index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "prepublish": "npm run format && npm run build"
  },
  "peerDependencies": {
    "@nestjs/common": "^5.1.0 || ^6.0.3 || ^7.0.1 || ^8.0.0"
  },
  "dependencies": {
    "@types/node": "^18.11.18",
    "dotenv": "^16.0.3",
    "glob": "^8.0.3",
    "lodash.get": "^4.4.2",
    "lodash.set": "^4.3.2",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.0"
  },
  "devDependencies": {
    "rimraf": "^3.0.2",
    "@nestjs/common": "^9.2.1",
    "@nestjs/core": "^9.2.1",
    "@nestjs/testing": "^9.2.1",
    "@types/glob": "^8.0.0",
    "@types/jest": "^29.2.4",
    "jest": "^29.3.1",
    "prettier": "^2.8.1",
    "ts-jest": "^29.0.3",
    "typescript": "^4.9.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "test",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage"
  }
}
