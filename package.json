{
  "name": "nestjs-config",
  "version": "1.4.10",
  "description": "Easy to use Nest congifuration module",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/starker-xp/nestjs-config"
  },
  "license": "MIT",
  "authors": [
    {
      "name": "Aaryanna Simonelli",
      "email": "ashleighsimonelli@gmail.com"
    },
    {
      "name": "Fabrizio Fenoglio",
      "email": "fabri.feno@gmail.com"
    },
    {
      "name": "Shady Khalifa",
      "email": "shekohex@gmail.com"
    },
    {
      "name": "Guillaume CAOUISSIN",
      "email": "guillaume.caouissin@gmail.com"
    }
  ],
  "keywords": [
    "nestjs",
    "config",
    "environment"
  ],
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc && npm run build:index",
    "build:index": "rimraf ./index.js && rimraf ./index.d.ts && tsc -d --skipLibCheck ./index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "format": "prettier **/**/*.ts --ignore-path ./.prettierignore --write && git status",
    "prepublish": "npm run format && npm run build"
  },
  "dependencies": {
    "@types/node": "^18.11.18",
    "dotenv": "^16.0.3",
    "glob": "^8.0.3",
    "lodash.get": "^4.4.2",
    "lodash.set": "^4.3.2",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.0"
  },
  "devDependencies": {
    "@nestjs/common": "^9.2.1",
    "@nestjs/core": "^9.2.1",
    "@nestjs/testing": "^9.2.1",
    "@types/glob": "^8.0.0",
    "@types/jest": "^29.2.4",
    "jest": "^29.3.1",
    "prettier": "^2.8.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^29.0.3",
    "typescript": "^4.9.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage"
  }
}
