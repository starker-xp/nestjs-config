{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "removeComments": false,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "allowJs": true,
    "baseUrl": "./",
    "outDir": "./dist"
  },
  "exclude": [ "./index.ts","./index.d.ts","node_modules", "src/__tests__", "dist", "examples","**/*spec.ts" ]
}
